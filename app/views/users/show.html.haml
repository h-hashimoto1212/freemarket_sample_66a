          .main__wrapper__right__middle_tab_1__top
            %input.main__wrapper__right__middle_tab_1__top__1{type: "button", value: "取引中"}
              
            %input.main__wrapper__right__middle_tab_1__top__2{type: "button", value: "過去の取引"}
              
