      = render partial: 'sidebar'
                    
      .main__wrapper__right
        .main__wrapper__right__top
          = link_to "#" do
            .main__wrapper__right__top__a
              .main__wrapper__right__top__a__image
                = image_tag "no-icon.png", size: "60x60", alt: "顔写真1", class: "image_top"
              .main__wrapper__right__top__a__name
                = @user.nickname
              .main__wrapper__right__top__a__info
