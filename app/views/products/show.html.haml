= render partial: 'header'
.sales
  .sales__list
    .sales__list_neme
      %h1 
        = @product.name
    .sales__list_top
      .sales__list_top_pic

        = image_tag @product.photos.first.image.to_s, class: "sales_pic"
        - @product.photos.each do |photo|
          = image_tag photo.image.to_s, class: "sales_pic_smoll"
      .sales__list_top_item
        .sales__list_top_item_contener
          .sales__list_top_item_contener_column
            出品者
          .sales__list_top_item_contener_rigth
            .sales__list_top_item_contener_rigth_top
              .sales__list_top_item_contener_rigth_top_text
                =link_to "/users/#{@product.seller.user.id}",class:"color" do
                  = @product.seller.user.nickname
                  -# 文字の量指定
            .sales__list_top_item_contener_rigth_bottom
              .sales__list_top_item_contener_rigth_bottom_evaluation
                .sales__list_top_item_contener_rigth_bottom_evaluation_smile
                  =icon("fas","grin-hearts",class:"face1")
                  = @good
                .sales__list_top_item_contener_rigth_bottom_evaluation_normal
                  =icon("fas","smile-beam",class:"face2")
                  = @ok
                .sales__list_top_item_contener_rigth_bottom_evaluation_angry
                  =icon("fas","smile",class:"face3")
                  = @bad
        .sales__list_top_item_contener
          .sales__list_top_item_contener_column
            カテゴリー
          .sales__list_top_item_contener_rigth
            .sales__list_top_item_contener_rigth_secnd
              .sales__list_top_item_contener_rigth_secnd_category
                =link_to "#",class:"color" do
                  = @product.category.parent.parent.name
              %ul
                %li
                  =icon("fas","angle-right",class:"icon_color")
                  =link_to "#",class:"color" do
                    = @product.category.parent.name
                %li
                  =icon("fas","angle-right",class:"icon_color")
                  =link_to "#",class:"color" do
                    = @product.category.name
        .sales__list_top_item_contener2
          .sales__list_top_item_contener2_column2
            ブランド
          .sales__list_top_item_contener2_rigth2
            .sales__list_top_item_contener2_rigth2_3rd
              .sales__list_top_item_contener2_rigth2_3rd_hoghog
                =link_to "#",class:"color" do
                  = @product.brand.name
        .sales__list_top_item_contener2
          .sales__list_top_item_contener2_column2
            商品の状態
          .sales__list_top_item_contener2_rigth2
            .sales__list_top_item_contener2_rigth2_3rd
              .sales__list_top_item_contener2_rigth2_3rd_hoghog
                = @product.condition
        .sales__list_top_item_contener2
          .sales__list_top_item_contener2_column2
            配送料の負担
          .sales__list_top_item_contener2_rigth2
            .sales__list_top_item_contener2_rigth2_3rd
              .sales__list_top_item_contener2_rigth2_3rd_hoghog
                = @product.shipping_charge
        .sales__list_top_item_contener2
          .sales__list_top_item_contener2_column2
            配送の方法
          .sales__list_top_item_contener2_rigth2
            .sales__list_top_item_contener2_rigth2_3rd
              .sales__list_top_item_contener2_rigth2_3rd_hoghog
                = @product.shipping_method
        .sales__list_top_item_contener2
          .sales__list_top_item_contener2_column2
            配送元地域
          .sales__list_top_item_contener2_rigth2
            .sales__list_top_item_contener2_rigth2_3rd
              .sales__list_top_item_contener2_rigth2_3rd_hoghog
                =link_to "#",class:"color" do
                  = @product.shipping_prefecture
        .sales__list_top_item_contener2
          .sales__list_top_item_contener2_column2
            発送日の目安
          .sales__list_top_item_contener2_rigth2
            .sales__list_top_item_contener2_rigth2_3rd
              .sales__list_top_item_contener2_rigth2_3rd_hoghog
                = @product.shipping_days
    


    .sales__list_price_box
      %h1 
        = "¥#{@product.price.to_s(:delimited, delimiter: ',')}"
      %p (消込)
      %h3
        - if @product.shipping_charge = 1
          送料込み
        - elsif @product.shipping_charge = 2
          着払い
    .sales__list_btn
      =link_to "#" ,class:"color" do
        .get_btn
          購入画面に進む
    .sales__list_comment
      = simple_format@product.description
    .sales__list_evaluate
      .sales__list_evaluate_put
        .sales__list_evaluate_put_good
          =link_to "#",class:"evaluate" do
            =icon("fas","heart")
            いいね！
        .sales__list_evaluate_put_bad
          =link_to "#",class:"evaluate" do
            =icon("fas","flag")
            不適切な商品の報告
      .sales__list_evaluate_link
        =link_to "#",class:"link" do
          =icon("fas","key")
          あんしん・あんぜんへの取り組み


    
  .sales__list_2nd
    .sales__list_2nd_denngar
      相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
    .sales__list_2nd_form
      =form_for"#",class: "form" do |f|
        =f.text_area "#",class: "form"
    .sales__list_2nd_form_btn
      =link_to"#" do
        .form_btn
          コメントする 


