.another
  .another_list
    .another_list_title
      =link_to "#",class:"my_page" do
        = "#{@product.seller.user.nickname}さんのその他の出品"

    %ul.another_list_item
      -@seller_products.each do |other|
        %li.list_1
          =link_to product_path(other.id) ,class: "color" do
            =image_tag other.photos.first.image.to_s,class: "pic"
            .title 
              = other.name
            .title_iteme
              .title_iteme_price
                = "¥#{other.price.to_s(:delimited, delimiter: ',')}"
              .title_iteme_like
                =icon("fas","heart")
                4

