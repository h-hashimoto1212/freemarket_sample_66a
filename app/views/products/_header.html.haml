.mein
  .mein_head
    .mein_head_top
      =link_to "#" ,class: "log" do
        = image_tag "fmarket_logo_red.svg",class: "mein_title", alt: "メルちゃん"          
      = form_for "#" do |f|
        .from_top
          = f.text_field :content, class:'Search',placeholder: "何をお探しですか？"
          = button_tag type: 'submit', class: 'form_submit' do
            %i.fa-lg.fa-fw.fa-search


    .mein_head_bottme
      .mein_head_bottme_left
        %ul.left
          %li.bottme_menu
            = link_to "#" ,class: "color" do
              = icon('fas', 'list', class: 'icon', style: "color:red")
              カテゴリーから探す
          %li.bottme_menu
            = link_to "#" ,class: "color" do
              = icon('fas', 'tag', class: 'icon', style: "color:red")
              ブランドから探す
      .mein_head_bottme_right
        %ul.right
          %li.bottme_menu
            = link_to "#" ,class: "color" do
              = icon('fas', 'heart', class: 'icon', style: "color:gray")
              いいね！一覧
          %li.bottme_menu
            = link_to "#" ,class: "color" do
              = icon('fas', 'bell', class: 'icon', style: "color:gray")
              お知らせ
          %li.bottme_menu
            = link_to "#" ,class: "color" do
              = icon('fas', 'check', class: 'icon', style: "color:gray")
              やる事リスト
          %li#user.menu
            %a.my_account{href: "#",class: "color" } 
              %img{alt: "#", src: "../inu.jpg",class: "my_user", style: "color:gray"}
              マイページ